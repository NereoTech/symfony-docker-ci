{% extends 'base.html.twig' %}

{% block title %}Qr code!{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            <div class="container px-0">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        </div>
    {% endif %}

    <div class="container mt-5 mb-5 text-center">
        <h1>Scan this QR Code:</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div class="card">
                        <div class="card-body">
                            <div class="mb-3">
                                <img width="300" height="300" class="qr-image" src="data:image/png;base64,{{ qrCodeImage }}" alt="{{ secretKey }}" />
                            </div>
                            <div class="mb-3">
                                <input type="text" id="qrCode" name="qrCode" class="form-control form-control-lg" required="required" placeholder="Please enter the 6 code from your authenticator app" autofocus />
                            </div>
                            <input type="submit" class="btn btn-lg btn-primary" value="Setup" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
